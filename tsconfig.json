{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "lib": [
      "es2017",
      "es2015",
      "dom"
    ],
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "outDir": "./lib",
    "declaration": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./typings/*.ts"
  ]
}