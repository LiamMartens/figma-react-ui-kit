{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2015",
        "lib": [
            "es2017",
            "es2015",
            "dom"
        ],
        "jsx": "react",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "outDir": "./dist",
        "rootDir": "./",
        "baseUrl": "./",
        "typeRoots": [
            "./typings"
        ]
    },
    "include": [
        "./src/**/*",
        "./typings/**/*",
        "./constants/**/*"
    ]
}